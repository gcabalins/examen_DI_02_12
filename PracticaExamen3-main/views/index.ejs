<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>RetroBlog</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <header class="header">
    <div class="logo">
      <h1>RetroBlog</h1>
      <p>Un blog para amantes del retro</p>
    </div>

    <nav>
      <ul>
        <% categorias.forEach(cat => { %>
          <li><a href="/categoria/<%= cat %>"><%= cat %></a></li>
        <% }) %>
      </ul>
    </nav>
  </header>

  <main class="contenedor">
    <h2>Ãšltimas entradas del blog</h2>

    <section class="grid-posts">
      <% posts.forEach(post => { %>
        <article class="post">
          <a href="/post/<%= post.id %>">
            <img src="<%= post.thumbnail %>" alt="<%= post.title %>">
            <h3><%= post.title %></h3>
            <p><%= post.intro %></p>
          </a>
        </article>
      <% }) %>
    </section>
  </main>

  <footer class="footer">
    <p>Created by Francisco Romero</p>
  </footer>
</body>
</html>
